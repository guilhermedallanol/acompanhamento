<h1><%= t('.title') %></h1>

<%= simple_form_for @weight do |f| %>
  <% if f.error_notification %>
    <%= f.error_notification %>
  <% end %>

  <%= f.input :registered_on, as: :date, html5: true, required: true %>
  <%= f.input :value, required: true %>

  <%= link_to 'Cancelar', weights_path %>
  <%= f.button :submit, class: :button %>
<% end %>
