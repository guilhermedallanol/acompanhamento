<h1><%= t('.title') %></h1>

<%= simple_form_for @hunger do |f| %>
  <%= f.error_notification %>
  <%= f.input :registered_at, html5: true, required: true  %>
  <%= f.input :local, required: true %>
  <%= f.input :sensation, required: true %>
  <%= f.input :question, required: true %>
  <%= f.input :classification, required: true,
    collection: Hunger.classifications.map { |key,_|
      [I18n.t(key, scope: [:hunger, :enums, :classification]), key]
    }
  %>
  <%= f.button :submit, class: :button %>
  <%= link_to 'Cancelar', perimeters_path %>
<% end %>
